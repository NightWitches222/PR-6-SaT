<Page x:Class="PR6_2.Pages.RegistrationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR6_2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationsPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация" 
               FontSize="20" 
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Grid.Row="0" Margin="0,0,0,20"/>

        <TextBlock Text="ФИО:" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="txtFIO" Grid.Row="1" Margin="5,25,5,5" Height="30"/>

        <TextBlock Text="Email:" Grid.Row="2" Margin="5"/>
        <TextBox x:Name="txtEmail" Grid.Row="2" Margin="5,25,5,5" Height="30"/>

        <TextBlock Text="Пароль:" Grid.Row="3" Margin="5"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="3" Margin="5,25,5,5" Height="30"/>

        <TextBlock Text="Подтвердите пароль:" Grid.Row="4" Margin="5"/>
        <PasswordBox x:Name="txtConfirmPassword" Grid.Row="4" Margin="5,25,5,5" Height="30"/>

        <TextBlock Text="Роль:" Grid.Row="6" Margin="5"/>
        <ComboBox x:Name="cmbRole" Grid.Row="6" Margin="5,25,5,5" Height="30">
            <ComboBoxItem Content="user" IsSelected="True"/>
            <ComboBoxItem Content="admin"/>
            <ComboBoxItem Content="manager"/>
        </ComboBox>

        <Button x:Name="btnRegister" 
            Content="Зарегистрироваться" 
            Grid.Row="7" 
            Margin="5,20,5,5" 
            Height="35" 
            Background="#FF0078D7" 
            Foreground="White"
            FontWeight="Bold"
            Click="BtnRegister_Click"/>

        <TextBlock x:Name="txtStatus" 
               Grid.Row="8" 
               Foreground="Red" 
               HorizontalAlignment="Center" 
               Margin="5" 
               TextWrapping="Wrap"/>
    </Grid>
</Page>
